{% extends "admin.html.jinja2" %}

{% block head %}
{% include "datatables.min.css.jinja2" %}
<link rel="stylesheet" href="{{ url_for('static', filename='css/datatables.css') }}" />
{% endblock %}

{% block resources %}
{% include "datatables.min.js.jinja2" %}
<script src="{{ url_for('static', filename='js/admin/instances.js') }}"></script>
{% endblock %}

{% block admin_content %}
<input type=hidden id="current_user" value="{{ get_uid() }}" />
<table class="table table-striped table-bordered instances-table">
    <thead>
        <th>ID</th>
        <th>Engine</th>
        <th>User</th>
        <th>Status</th>
        <th></th>
    </thead>
</table>

<template id="instances-table-actions-template">
    <div class="text-center">
        <div class="dropdown">
            <button class="btn btn-link btn-sm" id="dropdownMenuButton" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fas fa-ellipsis-v"></i> <span class="sr-only">Options</span>
            </button>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                <a href="#" class="dropdown-item text-danger stop-engine">
                    <i class="fas fa-trash"></i> Stop
                </a>
            </div>
        </div>
    </div>
</template>
{% endblock %}