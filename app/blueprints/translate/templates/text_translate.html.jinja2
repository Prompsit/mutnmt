{% extends "translate.html.jinja2" %}

{% block resources %}
<script src="{{ url_for('static', filename='js/translate.js') }}"></script>
{% endblock %}

{% block translate_content %}
<div class="row mt-4">
    <div class="col-6">
        <form class="translate-form" data-status="false">
            <textarea class="form-control translate-text" style="min-height: 150px;">My father bought a bike yesterday for me</textarea>
            <div class="d-flex align-items-center mt-2">
                <select class="custom-select mr-1 engine-select">
                    {% for engine_entry in engines %}
                        <option value="{{ engine_entry.engine.id }}">{{ engine_entry.engine.name }}</option>
                    {% endfor %}
                </select>

                <div class="text-right">
                    <input type="submit" class="btn btn-primary translate-btn" data-ready="false" value="Translate" />
                </div>
            </div>

            <div class="engine-status-container mt-2">
                <div class="alert alert-warning engine-launching mb-0" role="alert">
                    <i class="fas fa-circle-notch fa-spin"></i> Launching engine...
                </div>
                <div class="alert alert-success engine-ready mb-0" role="alert">
                    <i class="fas fa-check-circle"></i> Engine ready!
                </div>
                <div class="alert alert-danger engine-error mb-0" role="alert">
                    <i class="fas fa-exclamation-circle"></i> Something went wrong!
                </div>
            </div>
        </form>
    </div>
    <div class="col-6">
        <div class="jumbotron py-4 h-100">
            <p class="lead translation-target-text m-0">
                Gestern hat mein Vater mir ein Fahrrad gekauft.
            </p>
        </div>
    </div>
</div>
{% endblock %}