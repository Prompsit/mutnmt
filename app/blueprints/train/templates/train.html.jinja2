{% extends "base.html.jinja2" %}

{% block head %}
{% include "datatables.min.css.jinja2" %}
<link rel="stylesheet" href="{{ url_for('static', filename='css/cloud.css') }}" />
<link rel="stylesheet" href="{{ url_for('static', filename='css/train.css') }}" />
{% endblock %}

{% block resources %}
{% include "datatables.min.js.jinja2" %}
<script src="{{ url_for('static', filename='js/longpoll.js') }}"></script>
<script src="{{ url_for('static', filename='js/train.js') }}"></script>
{% endblock %}

{% block content %}
<h2 class="h5">Train a neural engine</h2>

{% if corpora | length == 0 %}
<div class="jumbotron p-3 text-center">
    <p class="h6 m-0">
        You need corpora to train an engine. <a href="{{ url_for('library.library_corpora') }}">Upload</a> a corpus or <a href="{{ url_for('library.library_engines') }}">grab</a> an engine
    </p>
</div>
{% else %}
<div class="row mt-4">
    <div class="col-12">
        <form action="{{ url_for('train.train_start') }}" method="POST" class="train-form">
            <div class="row">
                <div class="col-12 col-sm-6">
                    <label for="nameText" class="h6">Name</label>
                    <div class="input-group">
                        <input type="text" class="form-control" id="nameText" name="nameText" value="{{ random_name }}"/>
                    </div>
                </div>

                <div class="col-12 col-sm-6">
                    <label for="descriptionText" class="h6">Description</label>
                    <div class="input-group">
                        <input type="text" class="form-control" id="descriptionText" name="descriptionText" value=""/>
                    </div>
                </div>
            </div>

            <div class="row mt-3">
                <div class="form-group col-12 col-sm-6">
                    <label class="col-form-label h6">Duration</label>
                    <div class="input-group">
                        <input type="number" class="form-control" name="epochsText" value="10" min="1" max="64" />
                        <div class="input-group-prepend">
                            <div class="input-group-text">epochs</div>
                        </div>
                    </div>
                </div>

                <div class="form-group col-12 col-sm-6">
                    <div class="d-flex justify-content-between align-items-center">
                        <label class="col-form-label h6">Stopping condition</label>
                        <a href="#" class="text-dark">
                            <i class="far fa-question-circle"></i>
                        </a>
                    </div>
                    <div class="input-group">
                        <input type="number" name="patienceTxt" class="form-control" value="5" min="1" />
                        <div class="input-group-prepend">
                            <div class="input-group-text">validations</div>
                        </div>
                    </div>
                </div>

                <div class="form-group col-12 col-sm-4">
                    <label for="layer_3_n" class="col-form-label h6">Vocabulary size</label>
                    <div class="input-group">
                        <input type="number" name="vocabularySize" class="form-control" value="16000" min="16000" max="32000" />
                        <div class="input-group-prepend">
                            <div class="input-group-text">words</div>
                        </div>
                    </div>
                </div>

                <div class="form-group col-12 col-sm-4">
                    <label class="col-form-label h6">Batch size</label>
                    <div class="input-group">
                        <input type="number" name="batchSizeTxt" class="form-control" value="6000" min="1" />
                        <div class="input-group-prepend">
                            <div class="input-group-text">tokens</div>
                        </div>
                    </div>
                </div>

                <div class="form-group col-12 col-sm-4">
                    <label class="col-form-label h6">Validation frequency</label>
                    <div class="input-group">
                        <input type="number" name="validationFreq" class="form-control" value="1000" min="10" />
                        <div class="input-group-prepend">
                            <div class="input-group-text">steps</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-3 corpus-selector">
                <div class="col-12 col-sm-4 mb-3">
                    <div class="area-zone training-zone" data-valid="no">
                        <div class="area-values">
                            <div class="area-value-bar">
                                <div class="area-value-bar-bg"></div>
                                <div class="area-value-bar-fg"></div>
                            </div>
                            <small class="area-value area-value-min">10k</small>
                            <small class="area-value area-value-max">500k</small>
                            <small class="area-value area-value-current">0</small>
                        </div>

                        <div class="area-info">
                            <div class="area-name h6">Train</div>

                            <div class="area-corpora">
                            </div>
                        </div>
                    </div>

                    <div class="corpus-selector-list">
                        <table class="table corpus-selector-table table-training">
                            <thead>
                                <tr>
                                    <th>Corpus</th>
                                    <th></th>
                                    <th class="none"></th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for corpus in corpora %}
                                    <tr class="row-corpus" data-corpus="training" data-corpus-id="{{ corpus.id }}">
                                        <td class="border-0 py-2">
                                            <span class="badge px-0">
                                                {{ corpus.source.code }}—{{ corpus.target.code }}
                                            </span>
                                            <p>
                                                {{ corpus.name }}
                                            </p>
                                        </td>
                                        <td class="text-center border-0 p-0 py-2 align-middle" data-sort="{{ corpus.lines() }}" data-search="{{ corpus.lines() }}">
                                            <div class="input-group">
                                                <input type=number class="form-control corpus-selector-lines" min="1" max="{{ corpus.lines() }}" value="{{ corpus.lines() }}" />
                                                <div class="input-group-append">
                                                    <button class="btn btn-outline-primary corpus-selector-add"
                                                        data-corpus="training"
                                                        data-corpus-id="{{ corpus.id }}"
                                                        data-corpus-name="{{ corpus.name }}"
                                                        data-corpus-lines="{{ corpus.lines() }}">
                                                        <i class="fas fa-plus"></i>
                                                    </button>
                                                </div>
                                            </div>
                                            
                                            <div class="text-right">
                                                <small><span class="corpus-lines-max">{{ corpus.lines(human=True, abbr=True) }}</span> max</small>
                                            </div>
                                        </td>
                                        <td>
                                            {{ corpus.description }}
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="col-12 col-sm-4 mb-3">
                    <div class="area-zone dev-zone" data-valid="no">
                        <div class="area-values">
                            <div class="area-value-bar">
                                <div class="area-value-bar-bg"></div>
                                <div class="area-value-bar-fg"></div>
                            </div>
                            <small class="area-value area-value-min">1k</small>
                            <small class="area-value area-value-max">5k</small>
                            <small class="area-value area-value-current">0</small>
                        </div>

                        <div class="area-info">
                            <div class="area-name h6">Dev</div>

                            <div class="area-corpora">
                            </div>
                        </div>
                    </div>
                    
                    <div class="corpus-selector-list">
                        <table class="table corpus-selector-table table-dev">
                            <thead>
                                <tr>
                                    <th>Corpus</th>
                                    <th></th>
                                    <th class="none"></th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for corpus in corpora %}
                                    <tr class="row-corpus" data-corpus="dev" data-corpus-id="{{ corpus.id }}">
                                        <td class="border-0 py-2">
                                            <span class="badge px-0">
                                                {{ corpus.source.code }}—{{ corpus.target.code }}
                                            </span>
                                            <p>
                                                {{ corpus.name }}
                                            </p>
                                        </td>
                                        <td class="text-center border-0 p-0 py-2 align-middle" data-sort="{{ corpus.lines() }}" data-search="{{ corpus.lines() }}">
                                            <div class="input-group">
                                                <input type=number class="form-control corpus-selector-lines" min="1" max="{{ corpus.lines() }}" value="{{ corpus.lines() }}" />
                                                <div class="input-group-append">
                                                    <button class="btn btn-outline-primary corpus-selector-add"
                                                        data-corpus="dev"
                                                        data-corpus-id="{{ corpus.id }}"
                                                        data-corpus-name="{{ corpus.name }}"
                                                        data-corpus-lines="{{ corpus.lines() }}">
                                                        <i class="fas fa-plus"></i>
                                                    </button>
                                                </div>
                                            </div>
                                            
                                            <div class="text-right">
                                                <small><span class="corpus-lines-max">{{ corpus.lines(human=True, abbr=True) }}</span> max</small>
                                            </div>
                                        </td>
                                        <td>
                                            {{ corpus.description }}
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="col-12 col-sm-4 mb-3">
                    <div class="area-zone test-zone" data-valid="no">
                        <div class="area-values">
                            <div class="area-value-bar">
                                <div class="area-value-bar-bg"></div>
                                <div class="area-value-bar-fg"></div>
                            </div>
                            <small class="area-value area-value-min">1k</small>
                            <small class="area-value area-value-max">5k</small>
                            <small class="area-value area-value-current">0</small>
                        </div>

                        <div class="area-info">
                            <div class="area-name h6">Test</div>

                            <div class="area-corpora">
                            </div>
                        </div>
                    </div>
                    
                    <div class="corpus-selector-list">
                        <table class="table corpus-selector-table table-test">
                            <thead>
                                <tr>
                                    <th>Corpus</th>
                                    <th></th>
                                    <th class="none"></th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for corpus in corpora %}
                                    <tr class="row-corpus" data-corpus="test" data-corpus-id="{{ corpus.id }}">
                                        <td class="border-0 py-2">
                                            <span class="badge px-0">
                                                {{ corpus.source.code }}—{{ corpus.target.code }}
                                            </span>
                                            <p>
                                                {{ corpus.name }}
                                            </p>
                                        </td>
                                        <td class="text-center border-0 p-0 py-2 align-middle" data-sort="{{ corpus.lines() }}" data-search="{{ corpus.lines() }}">
                                            <div class="input-group">
                                                <input type=number class="form-control corpus-selector-lines" min="1" max="{{ corpus.lines() }}" value="{{ corpus.lines() }}" />
                                                <div class="input-group-append">
                                                    <button class="btn btn-outline-primary corpus-selector-add"
                                                        data-corpus="test"
                                                        data-corpus-id="{{ corpus.id }}"
                                                        data-corpus-name="{{ corpus.name }}"
                                                        data-corpus-lines="{{ corpus.lines() }}">
                                                        <i class="fas fa-plus"></i>
                                                    </button>
                                                </div>
                                            </div>
                                            
                                            <div class="text-right">
                                                <small><span class="corpus-lines-max">{{ corpus.lines(human=True, abbr=True) }}</span> max</small>
                                            </div>
                                        </td>
                                        <td>
                                            {{ corpus.description }}
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="row mt-4 align-items-center">
                <div class="col-6">
                    <div class="token-alert d-none">
                        <div class="d-flex align-items-center">
                            {% include "cloud.html.jinja2" %}
                            <div class="h6 ml-3">
                                We are getting your data ready for training! We are joining the selected
                                corpora and tokenizing it
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-6 text-right">
                    <input type=reset class="btn btn-secondary" value="Reset" />
                    <input type=submit class="btn btn-primary btn-start-training" value="Start training" disabled />
                </div>
            </div>
        </form>
    </div>
</div>

<template id="area-corpus-template">
    <div class="area-corpus">
        <p class="mb-0">
            <span class="area-corpus-name"></span> 
            <small>
                <a href="#" class="area-corpus-delete text-danger"><i class="far fa-trash-alt"></i></a>
            </small>
        </p>
        <small><span class="area-corpus-amount"></span> sentences · <span class="area-corpus-percent"></span>% of corpus</small>
    </div>
</template>

<template id="addcorpusPopover-template">
    <div class="popover-heading">
        Add sentences
    </div>

    <div class="popover-body">
        <div class="input-group mb-3">
            <input type="number" class="form-control addcorpus_lines" min="1" />
            <div class="input-group-append">
                <span class="input-group-text">lines</span>
            </div>
        </div>

        <a href="#" class="btn btn-primary addcorpus_btn mr-2">Add</a>
    </div>
</template>
{% endif %}
{% endblock %}