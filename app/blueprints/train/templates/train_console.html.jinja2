{% extends "base.html.jinja2" %}

{% block head %}
{% include "datatables.min.css.jinja2" %}
<link rel="stylesheet" href="{{ url_for('static', filename='css/console.css') }}" />
{% endblock %}

{% block resources %}
{% include "datatables.min.js.jinja2" %}

<script src="{{ url_for('static', filename='lib/moment-with-locales.min.js') }}"></script>
<script src="{{ url_for('static', filename='lib/apexcharts.min.js') }}"></script>

<script src="{{ url_for('static', filename='js/longpoll.js') }}"></script>
<script src="{{ url_for('static', filename='js/console.js') }}"></script>
{% endblock %}

{% block content %}
<input type=hidden id="engine_id" value="{{ engine.id }}" />

<div class="row">
    <div class="col-12 col-sm-8">
        {% if engine.has_stopped() %}
            <span class="badge badge-success">
                {% if engine.status == "stopped" %}
                    Stopped
                {% else %}
                    Finished
                {% endif %}
            </span>
        {% else %}
            <span class="badge badge-warning">Training</span>
        {% endif %}
        <p>
            <strong class="nn-name">{{ engine.name }}</strong>
        </p>

        <div class="row">
            <div class="col-12 col-sm-4 col-md-3">
                <div class="h6">Training</div>
                {% for corpus in corpora['train'] %}
                    <a href="{{ url_for('library.corpora_preview', id=corpus.id) }}">
                        {{ corpus.name }}
                    </a>
                {% endfor %}
            </div>
            <div class="col-12 col-sm-4 col-md-3">
                <div class="h6">Dev</div>
                {% for corpus in corpora['dev'] %}
                    <a href="{{ url_for('library.corpora_preview', id=corpus.id) }}">
                        {{ corpus.name }}
                    </a>
                {% endfor %}
            </div>
            <div class="col-12 col-sm-4 col-md-3">
                <div class="h6">Test</div>
                {% for corpus in corpora['test'] %}
                    <a href="{{ url_for('library.corpora_preview', id=corpus.id) }}">
                        {{ corpus.name }}
                    </a>
                {% endfor %}
            </div>
        </div>
    </div>

    <div class="col-12 col-sm-4">
        <div class="text-right">
            {% if not engine.has_stopped() %}
                <a href="{{ url_for('train.train_finish', id=engine.id) }}" class="btn btn-danger">
                    <i class="far fa-stop-circle"></i> Stop
                </a>
            {% endif %}

            {% if engine.has_stopped() %}
                <div class="h2 mt-3 mb-0">
                    {{ elapsed_format }}
                </div>
            {% else %}
                <div class="h2 mt-3 mb-0">
                    <span class="time-left" data-started="{{ launched }}" data-minutes="60"></span> 
                </div>
            {% endif %}

            <div class="d-flex align-items-start justify-content-end">
                <div class="mr-2">
                    Epoch <span class="epoch-no">1</span> out of {{ config['training']['epochs'] }}
                </div>

                <div>
                    <i class="fas fa-hourglass-start"></i>
                </div>
            </div>

            <div class="d-flex align-items-start justify-content-end mt-3">
                <div class="mr-2">
                    <span class="gpu-power">0</span>Wh <br /> <span class="power-reference"></span>
                </div>

                <div class="text-warning">
                    <i class="fas fa-bolt"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-5">
    <div class="col-12 mb-4">
        <div class="d-flex align-items-center">
            <div class="h3 mr-3">
                <i class="fas fa-chart-line"></i> Dashboard
            </div>

            <div class="ml-2 flex-grow-1">
                <hr />
            </div>
        </div>
    </div>

    <div class="col-12 col-sm-6">
        <div class="h6">
            Loss in training
        </div>

        <div class="training-chart" data-tag="train/train_batch_loss"></div>
    </div>

    <div class="col-12 col-sm-6">
        <div class="h6">
            Loss in validation
        </div>

        <div class="training-chart" data-tag="valid/valid_loss"></div>
    </div>

    <div class="col-12 col-sm-6">
        <div class="h6">
            BLEU score
        </div>

        <div class="training-chart" data-tag="valid/valid_score"></div>
    </div>

    <div class="col-12 col-sm-6">
        <div class="h6">
            Learning rate
        </div>

        <div class="training-chart" data-tag="train/train_learning_rate"></div>
    </div>
</div>

<div class="row mt-5">
    <div class="col-12">
        <div class="d-flex align-items-center">
            <div class="h3 mr-3">
                <i class="fas fa-clipboard-list"></i> Training log
            </div>

            <div class="ml-2 flex-grow-1">
                <hr />
            </div>
        </div>
    </div>

    <div class="col-12 mt-3">
        <table class="table table-striped table-bordered log-table">
            <thead>
                <th>Time</th>
                <th>Epoch</th>
                <th>Step</th>
                <th>Batch Loss</th>
                <th>Tokens / s</th>
                <th>Learning rate</th>
            </thead>
        </table>
    </div>
</div>
{% endblock %}