{% extends "inspect.html.jinja2" %}

{% block head %}
<link rel="stylesheet" href="{{ url_for('static', filename='css/engine-status.css') }}" />
{% endblock %}

{% block resources %}
<script src="{{ url_for('static', filename='js/longpoll.js') }}"></script>
<script src="{{ url_for('static', filename='js/inspect/details.inspect.js') }}"></script>
{% endblock %}

{% block inspect_content %}
<div class="row">
    <div class="col-12">
        <i class="fas fa-exclamation-triangle"></i> Only the first sentence you type will be inspected
    </div>
</div>

<h3 class="h6 mt-3">Compare with</h3>

<div class="compare-btns d-none">
    <div class="d-flex">
        {% for engine_entry in engines %}
        <div class="btn-group-toggle mr-2" data-toggle="buttons">
            <label class="btn btn-sm btn-outline-success">
                <input type="checkbox" class="compare-engine" data-engine-id="{{ engine_entry.engine_id }}" /> {{ engine_entry.engine.name }}
            </label>
        </div>
        {% endfor %}
    </div>
</div>

<div class="inspect-compare-content my-4 d-none">
    <hr />
    <h3 class="h6 mb-3">Comparison</h3>
</div>

<div class="row row-striped inspect-row d-none">
    <div class="col-12">
        <hr />
        <h3 class="h6">Inspection</h3>
    </div>

    <div class="col-12">
        <div class="row">
            <div class="col-12 col-sm-4">
                <strong>Pre-processed input</strong>
            </div>

            <div class="col-12 col-sm-8">
                <span class="inspect-content preproc_input"></span>
            </div>
        </div>
    </div>

    <div class="col-12">
        <div class="row">
            <div class="col-12 col-sm-4">
                <strong>N-Best</strong>
            </div>

            <div class="col-12 col-sm-8">
                <span class="inspect-content nbest"></span>
            </div>
        </div>
    </div>

    <div class="col-12">
        <div class="row">
            <div class="col-12 col-sm-4">
                <strong>Pre-processed output</strong>
            </div>
            <div class="col-12 col-sm-8">
                <span class="inspect-content preproc_output"></span>
            </div>
        </div>
    </div>

    <div class="col-12">
        <div class="row">
            <div class="col-12 col-sm-4">
                <strong>Final output</strong>
            </div>
            <div class="col-12 col-sm-8">
                <span class="inspect-content postproc_output"></span>
            </div>
        </div>
    </div>
</div>

<template id="translation-template">
    <div class="row mb-1 translation-row">
        <div class="col-12 col-sm-3">
            <strong class="engine-name"></strong>
        </div>
        <div class="col-12 col-sm-8">
            <span class="user-engine-target"></span>
        </div>
    </div>
</template>
{% endblock %}