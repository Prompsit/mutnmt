{% extends "inspect.html.jinja2" %}

{% block head %}
<link rel="stylesheet" href="{{ url_for('static', filename='css/engine-status.css') }}" />
{% endblock %}

{% block resources %}
<script src="{{ url_for('static', filename='js/inspect/compare.inspect.js') }}"></script>
{% endblock %}

{% block inspect_content %}
<h3 class="h6">Compare with</h3>

<div class="compare-btns d-none">
    <div class="d-flex">
        {% for engine_entry in engines %}
        <div class="btn-group-toggle mr-2" data-toggle="buttons">
            <label class="btn btn-sm btn-outline-success">
                <input type="checkbox" class="compare-engine" data-engine-id="{{ engine_entry.engine_id }}" /> {{ engine_entry.engine.name }}
            </label>
        </div>
        {% endfor %}
    </div>
</div>

<div class="inspect-compare-content mt-5 d-none">
    <div class="row mb-1">
        <div class="col-12 col-sm-3">
            <strong>Bing</strong>
        </div>
        <div class="col-12 col-sm-9">
            <span class="engine-target bing-target"></span>
        </div>
    </div>
    <div class="row mb-1">
        <div class="col-12 col-sm-3">
            <strong>Google</strong>
        </div>
        <div class="col-12 col-sm-9">
            <a href="#" target="_blank" class="google-link">
                <i class="fas fa-external-link-alt"></i> Open translation in a new tab
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-sm-3">
            <strong>DeepL</strong>
        </div>
        <div class="col-12 col-sm-9">
            <a href="#" target="_blank" class="deepl-link">
                <i class="fas fa-external-link-alt"></i> Open translation in a new tab
            </a>
        </div>
    </div>
</div>

<template id="translation-template">
    <div class="row mb-1 translation-row">
        <div class="col-12 col-sm-3">
            <strong class="engine-name"></strong>
        </div>
        <div class="col-12 col-sm-8">
            <span class="user-engine-target"></span>
        </div>
    </div>
</template>
{% endblock %}