{% extends "library.html.jinja2" %}

{% block library_content %}
<p>
    <a href="{{ request.referrer }}" class="btn btn-link btn-sm px-0">
        <i class="fas fa-arrow-left"></i> Back
    </a>
</p>

<div class="row">
    <div class="col-12 col-sm-4">
        <p class="mb-0">
            <span class="badge px-0">{{ engine.source.name }} â€” {{ engine.target.name }}</span>
        </p>

        <h2 class="h5">{{ engine.name }}</h2>
        {% if engine.description %}
            <p>
                {{ engine.description }}
            </p>
        {% endif %}
    </div>
</div>

<div class="row">
    <div class="col-12 col-sm-4 mb-3">
        <div class="d-flex align-items-center bg-light p-4">
            <div class="display-4">
                <i class="fas fa-stopwatch"></i>
            </div>

            <div class="ml-3">
                <div class="h2">{{ time_elapsed }}</div>
                to train
            </div>
        </div>
    </div>

    <div class="col-12 col-sm-4 mb-3">
        <div class="d-flex align-items-center bg-light p-4">
            <div class="display-4">
                <i class="fas fa-tachometer-alt"></i>
            </div>

            <div class="ml-3">
                <div class="h2">{{ tps }}</div>
                tokens per second
            </div>
        </div>
    </div>

    <div class="col-12 col-sm-4 mb-3">
        <div class="d-flex align-items-center bg-light p-4">
            <div class="display-4">
                <i class="fas fa-charging-station"></i>
            </div>

            <div class="ml-3">
                <div class="h2">{{ power }}W</div>
                power used
            </div>
        </div>
    </div>

    <div class="col-12 col-sm-4 mb-3">
        <div class="d-flex align-items-center bg-light p-4">
            <div class="display-4">
                <i class="fas fa-spell-check"></i>
            </div>

            <div class="ml-3">
                <div class="h2">{{ score }} BLEU</div>
                best validation score
            </div>
        </div>
    </div>

</div>

<div class="row">
    <div class="col-12 col-sm-4 mb-3">
        <h3 class="h6">Corpora</h3>

        <table class="table table-striped details-table">
            <thead>
                <tr>
                    <th>Phase</th>
                    <th>Corpus</th>
                    <th>Lines</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for corpus_entry in corpora %}
                    <tr>
                        <td>{{ "Train" if corpus_entry.phase == "train" else "Validation" if corpus_entry.phase == "dev" else "Test" }}</td>
                        <td>{{ corpus_entry.corpus.name }}</td>
                        <td>{{ corpus_entry.corpus.corpus_files[0].file.lines }}</td>
                        <td>
                            <a href="{{ url_for('library.corpora_preview', id = corpus_entry.corpus.id) }}" class="" title="Preview" aria-label="Preview">
                                <i class="fas fa-stream"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% endblock %}