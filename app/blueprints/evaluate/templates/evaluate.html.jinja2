{% extends "base.html.jinja2" %}

{% block head %}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/datatables/1.10.19/css/dataTables.bootstrap4.min.css" integrity="sha256-F+DaKAClQut87heMIC6oThARMuWne8+WzxIDT7jXuPA=" crossorigin="anonymous" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.css" integrity="sha256-aa0xaJgmK/X74WM224KMQeNQC2xYKwlAt08oZqjeF0E=" crossorigin="anonymous" />
<link rel="stylesheet" href="{{ url_for('static', filename='css/evaluate.css') }}" />
{% endblock %}

{% block resources %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/datatables/1.10.19/js/jquery.dataTables.js" integrity="sha256-BFIKaFl5uYR8kP6wcRxaAqJpfZfC424TBccBBVjVzuY=" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/datatables/1.10.19/js/dataTables.bootstrap4.min.js" integrity="sha256-hJ44ymhBmRPJKIaKRf3DSX5uiFEZ9xB/qx8cNbJvIMU=" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js" integrity="sha256-R4pqcOYV8lt7snxMQO/HSbVCFRPMdrhAFMH+vr9giYI=" crossorigin="anonymous"></script>
<script src="{{ url_for('static', filename='js/custom-file.js') }}"></script>
<script src="{{ url_for('static', filename='js/evaluate.js') }}"></script>
{% endblock %}

{% block content %}
<h2 class="h5">Evaluate translations</h2>

<form action="{{ url_for('evaluate.evaluate_perform') }}" method="post" enctype="multipart/form-data" class="evaluate-form">
    <div class="row mt-3">
        <div class="col-sm-6 col-12">
            <h2 class="h6">Machine translation</h2>
            <div class="custom-file">
                <input type="file" class="custom-file-input" id="mt_file" name="mt_file" required>
                <label class="custom-file-label" for="mt_file">Choose file</label>
            </div>
        </div>
        <div class="col-sm-6 col-12 mt-4 mt-sm-0">
            <h2 class="h6">Human translation</h2>
            <div class="custom-file">
                <input type="file" class="custom-file-input" id="ht_file" name="ht_file" required>
                <label class="custom-file-label" for="ht_file">Choose file</label>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12 sides-decoration text-center">
            <div class="bg-white px-2 d-inline-block">
                <input type=submit class="btn btn-primary" value="Evaluate" />
            </div>
        </div>
    </div>
</form>

<div class="row evaluate-status" data-status="none">
    <div class="col-12 col-sm-4">
        <div class="alert alert-warning mb-0" role="alert">
            <i class="fas fa-circle-notch fa-spin"></i> Computing metrics...
        </div>
    </div>
</div>

<div class="evaluate-results d-none">
    <h2 class="h5">Metrics</h2>

    <div class="row evaluate-results-row">
        <template id="metric-template">
            <div class="col-12 col-sm-4 text-center mb-4">
                <strong class="h1 bold metric-value"></strong>

                <div class="metric-hint my-3">
                    <div class="metric-indicator"></div>
                    <div class="progress">
                        <div class="progress-bar bg-danger low-zone" role="progressbar" style="width: 25%" aria-valuenow="15" aria-valuemin="0" aria-valuemax="100"></div>
                        <div class="progress-bar bg-primary medium-zone" role="progressbar" style="width: 50%" aria-valuenow="15" aria-valuemin="0" aria-valuemax="100"></div>
                        <div class="progress-bar bg-success high-zone" role="progressbar" style="width: 25%" aria-valuenow="15" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>

                <strong class="metric-name"></strong>
            </div>
        </template>
    </div>

    <h2 class="h5 mt-5">Bleu per line</h2>
    <div class="my-3 chart-container">
        <canvas id="bpl-graph" class="w-100"></canvas>
    </div>
    <div class="mb-4">
        <table class="table table-striped table-bordered bleu-line">
            <thead>
                <th>Line</th>
                <th>Machine translation</th>
                <th>Human translation</th>
                <th>Bleu</th>
            </thead>
        </table>
    </div>
</div>
{% endblock %}